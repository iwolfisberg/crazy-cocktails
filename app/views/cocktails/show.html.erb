<div class="main-container main-container-padding">
  <div class="cocktail-username">
    <h2><%= @cocktail.name %></h2>
    <p>Cocktail proposed by <%= @cocktail.user.username %></p>
  </div>
  <div class="recipe-card">
    <%= cl_image_tag( @cocktail.photo, height: 350, crop: "scale") %>
    <div class="recipe-card-info">
      <h3>Recipe</h3>
      <p class="mb-3"><%= @cocktail.description %></p>
      <h3>Ingredients</h3>
      <% @doses.each do |dose| %>
        <p><%= dose.quantity %> <%= dose.ingredient.name %></p>
      <% end %>
    </div>
  </div>

  <div class="reviews">
    <% if @reviews.size > 1 %>
      <h4>Reviews: </h4>
    <% end %>
    <% @reviews.each do |review| %>
    <div class="review-content">
      <% if review.rating != nil %>
        <p><% (review.rating).times do %><i class="stars fas fa-star"></i><% end %> - <%= review.content %></p>
        <% end %>
      </div>
  <% end %>
</div>

  <%= render 'shared/form_review' %>
</div>
